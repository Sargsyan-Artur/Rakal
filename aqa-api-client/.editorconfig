# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 140

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{*.json, *.yaml, *.feature}]
indent_size = 2
